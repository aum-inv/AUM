        private void InitThread()
        {
            System.Threading.Thread tCL =
                new System.Threading.Thread(new System.Threading.ParameterizedThreadStart(Run));
            tCL.Start("CL");
            
            System.Threading.Thread tNG =
                new System.Threading.Thread(new System.Threading.ParameterizedThreadStart(Run));
