            get;
            set;
        } = null;

        public int MaximumDisplayItemCount
        {
            get;
            set;
        } = 30;
        public bool IsAutoScrollX
        {
            get { return pnlScroll.Visible; }
            set { pnlScroll.Visible = value; }
        }
        public string ItemCode
        {
            get;
            set;
        } = "";
        public List<T_VelocityItemData> ChartData
        {
            get;
            set;
        }

        public void LoadData(string itemCode = "", List<T_VelocityItemData> chartData = null)
        {
            ItemCode = itemCode;
            ChartData = chartData;
            Reset();
            View();
        }

        public VelocityLineChart()
        {
            InitializeComponent();
        }

        public bool IsLoaded
        {
            get;
            set;
        } = false;
        
