        public void Init(string itemCode)
        {
            try
            {
                if (!StorageMin01.ContainsKey(itemCode))
                {
                    StorageMin01.Add(itemCode, new LimitedList<S_CandleItemData>(100));
                }

                if (!StorageMin05.ContainsKey(itemCode))
