        public void Add(string itemCode, DateTime dateTime, Single price)
        {
            try
            {
                AddMin01(itemCode, dateTime, price);
                AddMin05(itemCode, dateTime, price);
                AddMin10(itemCode, dateTime, price);
                AddMin30(itemCode, dateTime, price);
