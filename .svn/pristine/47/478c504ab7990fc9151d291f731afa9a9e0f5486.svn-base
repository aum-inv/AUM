        private void 천지인1(S_CandleItemData item, DataPoint dataPoint)
        {
            try
            {
                T_SLHItemData t_SLH = new T_SLHItemData(item);
                t_SLH.Transform();
                if (t_SLH.SLHType == SLHTypeEnum.무극)
                    SetDataPointColor(dataPoint, Color.Black, Color.Black, Color.Black, 5);                
                else if (t_SLH.SLHType == SLHTypeEnum.소양)
                    SetDataPointColor(dataPoint, Color.Black, Color.Red, Color.White, 3);
                else if (t_SLH.SLHType == SLHTypeEnum.양명)
                    SetDataPointColor(dataPoint, Color.Black, Color.Red, Color.Red, 3);
                else if (t_SLH.SLHType == SLHTypeEnum.태양)
                    SetDataPointColor(dataPoint, Color.Red, Color.Red, Color.Red, 5);
                else if (t_SLH.SLHType == SLHTypeEnum.궐음)
                    SetDataPointColor(dataPoint, Color.Black, Color.Blue, Color.White, 3);
                else if (t_SLH.SLHType == SLHTypeEnum.소음)
                    SetDataPointColor(dataPoint, Color.Black, Color.Blue, Color.Blue, 3);
                else if (t_SLH.SLHType == SLHTypeEnum.태음)
                    SetDataPointColor(dataPoint, Color.Blue, Color.Blue, Color.Blue, 5);
                else
                    SetDataPointColor(dataPoint, Color.LightGray, Color.LightGray, Color.LightGray, 1);
            }
            catch (Exception)
            {
            }
        }
