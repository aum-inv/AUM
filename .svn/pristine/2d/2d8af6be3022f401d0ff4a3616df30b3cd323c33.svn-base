namespace OM.Vikala.Controls.Charts
{
    public partial class FiveColorChart : UserControl
    {      
        public ChartEvents ChartEventInstance
        {
            get;
            set;
        } = null;

        public int MaximumDisplayItemCount
        {
            get;
            set;
        } = 30;
        public bool IsAutoScrollX
        {
            get { return pnlScroll.Visible; }
            set { pnlScroll.Visible = value; }
        }

        public string ItemCode
        {
            get;
            set;
        } = "";
        public List<T_FiveColorItemData> ChartData
        {
            get;
            set;
        }

        public void LoadData(string itemCode = "", List <T_FiveColorItemData> chartData = null)
        {
            ItemCode = itemCode;
            ChartData = chartData;
            Reset();
            View();
        }
        
        public FiveColorChart()
        {
            InitializeComponent();         
        }

        public bool IsLoaded
        {
            get;
            set;
        } = false;

